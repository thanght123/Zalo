<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:paddingLeft="15dp"
    tools:ignore="RtlCompat">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_user_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:cardCornerRadius="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/near_user_image_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avt" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="Nguyen Ngoc Anh"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintStart_toEndOf="@id/card_user_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginStart="70dp"
        android:layout_marginTop="2dp"
        android:text="Nguyen Ngoc Anh"
        android:textColor="@color/dark_line"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintStart_toEndOf="@id/card_user_image"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="70dp"
        android:background="@color/dark_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_user_image" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginStart="70dp"
        android:text="8 gio"
        android:layout_marginTop="@dimen/dimen_16"
        android:textColor="@color/dark_line"
        android:layout_marginEnd="@dimen/margin_8"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>